<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#160b66" />
            <gradient android:angle="-90" android:startColor="#160b66" android:endColor="#160b66"  />            
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#039dfc" />
            <solid android:color="#039dfc"/>       
        </shape>
    </item>  
    <item >
       <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#4934eb" />
            <gradient android:angle="-90" android:startColor="#4934eb" android:endColor="#4934eb" />            
       </shape>
    </item>
</selector>