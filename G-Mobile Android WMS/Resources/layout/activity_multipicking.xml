<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<!-- Header aligned to top -->
	<include
        layout="@layout/header" />

	<!-- Content below header and above footer -->

	<ScrollView
        android:visibility="gone"
        android:fillViewport="true"
        android:id="@+id/activity_multip_scrollcontent"
        android:layout_above="@id/scanhint"
        android:layout_below="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

		<RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_size"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            android:gravity="left">

			<LinearLayout
                android:id="@+id/document_item_layout_prevloc"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="@dimen/list_margin_right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

				<TextView
					android:layout_marginLeft="1dp"
	   		   	    android:layout_marginRight="@dimen/list_margin_right"
                    android:text="@string/multipicking_activity_previous"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/PoprzedniaKuweta"
                    android:layout_height="wrap_content"/>
				<TextView
                    android:id="@+id/document_item_prevloc"
                    android:background="#efe2a2"
                    android:lines="1"
                    android:layout_toRightOf="@id/PoprzedniaKuweta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555"
                    android:padding="1dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

			</LinearLayout>

			<TextView
                android:id="@+id/MultipOpis"
                android:background="#c2c2c2"
                android:lines="1"
                android:layout_below="@id/document_item_layout_prevloc"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>


			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/MultipOpis"
                android:id="@+id/MutipGridFromTo">
				
				<TextView
	                android:id="@+id/MultipLokalizacjazrodlowa"
	                android:text="@string/document_mp_lokalizacjazrodlowa"
					android:layout_marginLeft="@dimen/list_margin_left"
	                android:textSize="18sp"
	                android:textStyle="bold"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"/>

				<TextView
                    android:id="@+id/MultipZabierzZ"
                    android:background="#c2c2c2"
                    android:lines="1"
                    android:layout_weight="1"
					android:layout_marginLeft="@dimen/list_margin_left"
	   		   	    android:layout_marginRight="@dimen/list_margin_right"
                    android:layout_marginTop="2dp"
                    android:textSize="18sp"
                    android:gravity="center"
					android:textStyle="bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
				<!-- 
                <ImageView
                    android:layout_weight="0.5"
                    android:contentDescription=""
                    android:src="@drawable/right_arrow_wo_circle"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:lines="2"
                    android:layout_marginRight="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                  android:id="@+id/MultipRightArrow"/>
 -->
				<LinearLayout
						  android:id="@+id/document_item_layout_article"
						  android:layout_below="@id/MultipOpis"
						  android:layout_marginLeft="@dimen/list_margin_left"
						  android:layout_marginRight="@dimen/list_margin_right"
						  android:layout_marginTop="1dp"
						  android:orientation="vertical"
						  android:textStyle="bold"
						  android:gravity="center"
						  android:layout_width="match_parent"
						  android:layout_height="wrap_content">

					<TextView
						android:id="@+id/MultipTowar"
						android:text="@string/document_item_article_name"
						android:textSize="18sp"
						android:textStyle="bold"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

					<TextView
		android:id="@+id/document_item_article"
		android:background="#c2c2c2"
		android:lines="2"
		android:layout_below="@id/MultipTowar"
		android:textStyle="bold"
		android:textSize="18sp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

				</LinearLayout>

                
			<LinearLayout
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:id="@+id/document_item_layout_partia"
                android:layout_below="@id/document_item_layout_article"
        
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<TextView
                    android:text="@string/document_item_partia"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:textStyle="bold"/>

				<LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
					 android:layout_below="@id/document_item_layout_article"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


					<EditText
                        android:text=""
                        android:textSize="18sp"
                        android:inputType="text"
                        android:id="@+id/document_item_partia"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

					<android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/document_item_btn_partia" />



				</LinearLayout>


			</LinearLayout>



			<LinearLayout
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:id="@+id/document_item_layout_paleta"
               
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<LinearLayout
                    android:id="@+id/document_item_layout_paleta"
				
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


					<TextView
                        android:text="@string/document_item_paleta"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "left"
                        android:textStyle="bold"/>

					<LinearLayout
                        android:layout_marginLeft="@dimen/list_margin_left"
                        android:layout_marginRight="@dimen/list_margin_right"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



						<EditText
                            android:inputType="text"
                            android:layout_weight="1"
                            android:id="@+id/document_item_paleta"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
						<android.support.design.widget.FloatingActionButton
                            android:layout_marginLeft="@dimen/floating_button_margin_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@color/floating_button_blue"
                            android:src="@drawable/edit"
                            app:fabCustomSize="@dimen/small_floating_button_size"
                            app:maxImageSize="@dimen/small_floating_button_maximagesize"
                            android:id="@+id/document_item_btn_paleta" />

					</LinearLayout>
				</LinearLayout>

			</LinearLayout>




			<LinearLayout
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:id="@+id/document_item_layout_bbefore_proddate"
                android:layout_below="@id/document_item_layout_paleta"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<LinearLayout
                    android:id="@+id/document_item_layout_proddate"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

					<TextView
                        android:text="@string/document_item_proddate"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "left"
                        android:textStyle="bold"/>

					<EditText
                        android:inputType="none"
                        android:id="@+id/document_item_proddate"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

				</LinearLayout>

				<LinearLayout
                    android:id="@+id/document_item_layout_bestbefore"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

					<TextView
                        android:text="@string/document_item_bestbefore"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "left"
                        android:textStyle="bold"/>

					<EditText
                        android:inputType="none"
                        android:id="@+id/document_item_bestbefore"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:id="@+id/document_item_layout_serial_lot"
                android:layout_below="@id/document_item_layout_bbefore_proddate"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<LinearLayout
                    android:id="@+id/document_item_layout_serial"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

					<TextView
                        android:text="@string/document_item_serial"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "left"
                        android:textStyle="bold"/>

					<EditText
                        android:inputType="text"
                        android:id="@+id/document_item_serial"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

				</LinearLayout>

				<LinearLayout
                    android:id="@+id/document_item_layout_lot"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

					<TextView
                        android:text="@string/document_item_lot"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "left"
                        android:textStyle="bold"/>

					<EditText
                        android:inputType="text"
                        android:id="@+id/document_item_lot"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
                android:id="@+id/document_item_layout_flog"
                android:layout_below="@id/document_item_layout_serial_lot"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

				<TextView
                    android:text="@string/document_item_flog"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

				<LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

					<TextView
                        android:id="@+id/document_item_flog"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

					<android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/document_item_btn_flog" />

				</LinearLayout>

			</LinearLayout>



       				<LinearLayout
                        android:layout_marginLeft="@dimen/list_margin_left"
                        android:layout_marginRight="@dimen/list_margin_right"
                        android:id="@+id/document_item_layout_kodean"
                        android:layout_below="@id/document_item_layout_flog"
					    android:orientation="vertical"
					    android:layout_weight="1"
                        android:singleLine="true"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content">

					<TextView
                        android:text="@string/document_item_kodean"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>
                    <TextView
                        android:inputType="text"
                        android:id="@+id/document_item_kodean"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


				</LinearLayout>



				<TextView
                	android:id="@+id/MultipLokalizacjaDocelowa"
                	android:text="@string/document_mp_kuweta"
					android:layout_marginLeft="@dimen/list_margin_left"
                	android:textSize="18sp"
                	android:textStyle="bold"
                	android:layout_width="match_parent"
                	android:layout_height="wrap_content"/>
				
				<TextView
                    android:id="@+id/MultipWłóżDo"
                    android:background="#c2c2c2"
                    android:layout_weight="1"
				    android:layout_marginLeft="@dimen/list_margin_left"
				    android:layout_marginRight="@dimen/list_margin_right"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
					android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

			</LinearLayout>



			<LinearLayout
				android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/MutipGridFromTo">
				<LinearLayout
						android:layout_marginLeft="@dimen/list_margin_left"
						android:layout_marginRight="@dimen/list_margin_right"
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">

				<TextView
					android:id="@+id/document_item_multipsetamount"
					android:layout_below="@id/MutipGridFromTo"
					android:layout_marginLeft="10dp"
					android:text="@string/multipicking_activity_setamount"
					android:textSize="18sp"
					android:textStyle="bold"
					android:gravity="left"
                         
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<TextView
					 android:id="@+id/document_item_multipsetamountX"
					android:background="#c2c2c2"
					android:lines="1"
					android:layout_below="@id/document_item_multipsetamount"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="10dp"
				    
					android:textSize="28sp"
					android:gravity="left"
                    android:layout_weight="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
				</LinearLayout>
				<LinearLayout
							android:layout_marginLeft="@dimen/list_margin_left"
							android:layout_marginRight="@dimen/list_margin_right"
							android:orientation="vertical"
							android:layout_below="@id/MutipGridFromTo"
							 android:layout_width="fill_parent"
							android:layout_height="wrap_content">


					<TextView
					    android:id="@+id/MultipWykonano"
						android:layout_below="@id/MutipGridFromTo"
						android:layout_marginRight="5dp"
						android:layout_marginLeft="10dp"
						android:text="@string/multipicking_activity_done"
						android:textSize="18sp"
						android:gravity="center"
						 android:layout_width="fill_parent"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

					<G_Mobile_Android_WMS.Controls.NumericUpDown
						android:id="@+id/MultipAmount"
						android:layout_below="@id/MultipWykonano"
                        android:layout_weight="2"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
						android:layout_marginTop="-15dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    
				</LinearLayout>
			
			</LinearLayout>

		</RelativeLayout>





	</ScrollView>

	<TextView
        android:gravity="center"
        android:lines="1"
        android:id="@+id/scanhint"
        android:layout_above="@id/scanbutton"
        android:layout_weight="1"
        android:padding="3dp"
        android:textStyle="bold"
        android:text=""
        android:autoSizeTextType="uniform"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>


	<Button
        android:id="@+id/scanbutton"
        android:background="@color/color_scanbutton"
        android:text="@string/global_skanuj"
        android:gravity = "center"
        android:layout_above="@id/footer"
        android:layout_marginTop="@dimen/scanbutton_margin_top"
        android:layout_marginLeft="@dimen/scanbutton_margin_left"
        android:layout_marginBottom="@dimen/scanbutton_margin_bottom"
        android:layout_marginRight="@dimen/scanbutton_margin_right"
        android:clickable="true"
        android:padding="8dp"
        android:autoSizeTextType="uniform"
        android:textSize="@dimen/scanbutton_textsize"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scanbutton_height"/>

	<!-- Footer -->

	<RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_size"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:background="@color/color_footer"
        android:gravity="left">
		<!-- 
              <android.support.design.widget.FloatingActionButton
          android:layout_below="@id/scanbutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/arrow_prev"
         app:backgroundTint="@color/floating_button_blue"
         app:fabCustomSize="@dimen/floating_button_size"
         app:maxImageSize="@dimen/floating_button_maximagesize"
         android:layout_marginLeft="@dimen/floating_button_margin_left"
         android:id="@+id/multipicking_back" />
        -->

		<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/SettingsBtnPrev"
            android:gravity="right">

               

			<android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkmark"
                app:backgroundTint="@color/floating_button_green"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:layout_marginRight="@dimen/floating_button_margin_right"
                android:id="@+id/multipicking_ok" />

  

		</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/SettingsBtnPrev"
            android:gravity="left">

                <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pause"
                app:backgroundTint="@color/floating_button_blue"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:id="@+id/multipicking_pause" />

			

  

		</LinearLayout>

	</RelativeLayout>

</RelativeLayout>