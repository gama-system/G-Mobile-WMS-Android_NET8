<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/contractors_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/contractors_list_contractorname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:autoSizeTextType="uniform"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:padding="@dimen/listv_padding"
        android:layout_marginRight="@dimen/list_margin_right"
        android:layout_marginLeft="@dimen/list_margin_left">
    </TextView>


    <TextView
        android:padding="@dimen/listv_padding"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/list_margin_right"
        android:layout_marginLeft="@dimen/list_margin_left"
        android:autoSizeTextType="uniform"
        android:id="@+id/contractors_list_contractorsymbol"
        android:textColor="@color/color_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </TextView>



</LinearLayout>

