

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/editingdocuments_list_status"
        android:layout_width="10dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:textColor="@color/color_black"
        android:background="#0e0"
        android:textStyle="bold"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

         <TextView
            android:id="@+id/editingdocuments_list_symbol"
            android:textStyle="bold"
            android:text="@string/editingdocuments_symbol"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:textColor="@color/color_black"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content "/>
            
            <TextView
            android:id="@+id/editingdocuments_list_articlename"
            android:textStyle="bold"
            android:text="@string/editingdocuments_articlename"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:textColor="@color/color_black"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content "/>

              <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            
            android:id="@id/editingdocuments_listheader_NrKat"
            android:textStyle="bold"
            android:text="@string/editingdocuments_nrkat"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:textColor="@color/color_black"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/editingdocuments_list_paleta"
                android:textStyle="bold"
                android:gravity="left"
                android:lines="1"
                android:text="@string/editingdocuments_paleta"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

            <TextView
                android:id="@+id/editingdocuments_list_partia"
                android:textStyle="bold"
                android:gravity="right"
                android:text="@string/editingdocuments_partia"
                android:layout_marginRight="@dimen/list_margin_right"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editingdocuments_list_serialnumber"
                android:textStyle="bold"
                android:text="@string/editingdocuments_serialnumber"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="2"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

            <TextView
                android:id="@+id/editingdocuments_list_lot"
                android:textStyle="bold"
                android:gravity="right"
                android:text="@string/editingdocuments_lot"
                android:layout_marginRight="@dimen/list_margin_right"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

        </LinearLayout>


              <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editingdocuments_list_kodean"
                android:textStyle="bold"
                android:text="@string/editingdocuments_kodean"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="2"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>


        </LinearLayout>

        <TextView
            android:id="@+id/editingdocuments_list_flog"
            android:textStyle="bold"
            android:text="@string/editingdocuments_flog"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:textColor="@color/color_black"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content "/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editingdocuments_list_proddate"
                android:textStyle="bold"
                android:text="@string/editingdocuments_productiondate"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="2"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

            <TextView
                android:id="@+id/editingdocuments_list_bestbefore"
                android:textStyle="bold"
                android:gravity="right"
                android:text="@string/editingdocuments_bestbefore"
                android:layout_marginRight="@dimen/list_margin_right"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editingdocuments_list_location"
                android:gravity="left"
                android:textStyle="bold"
                android:text="@string/editingdocuments_location"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

            <TextView
                android:id="@+id/editingdocuments_list_setamount"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/editingdocuments_amountset"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

            <TextView
                android:id="@+id/editingdocuments_list_amount"
                android:textStyle="bold"
                android:gravity="right"
                android:lines="1"
                android:text="@string/editingdocuments_amountfulfilled"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:layout_marginRight="@dimen/list_margin_right"
                android:textColor="@color/color_black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content "/>

        </LinearLayout>
 
          <CheckBox
        android:id="@+id/documents_list_checkboxBOX"
        android:visibility="gone"
        android:padding="@dimen/listv_padding"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
