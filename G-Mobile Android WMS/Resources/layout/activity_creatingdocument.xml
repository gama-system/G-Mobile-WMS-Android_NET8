
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header aligned to top -->
    <include
        layout="@layout/header" />

    <!-- Content below header and above footer -->

    <ScrollView
        android:descendantFocusability="beforeDescendants"
        android:fillViewport="true"
        android:id="@+id/activity_info_scrollcontent"
        android:layout_above="@id/scanbutton"
        android:layout_below="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/creating_documents_layout_warehouse"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_warehouse"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/creating_documents_warehouse"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_warehouse" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/creating_documents_layout_registry"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_registry"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/creating_documents_registry"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_registry" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/creating_documents_layout_contractor"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_contractor"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/creating_documents_contractor"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_contractor" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/creating_documents_layout_funclog_src"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_funclog_src"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/creating_documents_funclog_src"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_funclog_src" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/creating_documents_layout_funclog_tar"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_funclog_tar"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/creating_documents_funclog_tar"
                        android:background="@color/text_field"
                        android:text=""
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_funclog_tar" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:descendantFocusability="beforeDescendants"
                android:id="@+id/creating_documents_layout_docrelated"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_docrelated"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/creating_documents_docrelated"
                    android:inputType="text"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:layout_marginRight="@dimen/list_margin_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:descendantFocusability="beforeDescendants"
                android:id="@+id/creating_documents_layout_description"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/creating_documents_description"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity = "left"
                    android:layout_marginLeft="@dimen/list_margin_left"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/creating_documents_description"
                    android:inputType="text"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity = "center"
                        android:textStyle="bold"/>

                                    <android.support.design.widget.FloatingActionButton
                        android:layout_marginLeft="@dimen/floating_button_margin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        app:backgroundTint="@color/floating_button_blue"
                        android:src="@drawable/edit"
                        app:fabCustomSize="@dimen/small_floating_button_size"
                        app:maxImageSize="@dimen/small_floating_button_maximagesize"
                        android:id="@+id/creating_documents_btn_dodajtekst" />


            </LinearLayout>




        </LinearLayout>

    </ScrollView>

        <Button
        android:id="@+id/scanbutton"
        android:background="@color/color_scanbutton"
        android:text="@string/global_skanuj"
        android:gravity = "center"
        android:layout_above="@id/footer"
        android:layout_marginTop="@dimen/scanbutton_margin_top"
        android:layout_marginLeft="@dimen/scanbutton_margin_left"
        android:layout_marginBottom="@dimen/scanbutton_margin_bottom"
        android:layout_marginRight="@dimen/scanbutton_margin_right"
        android:clickable="true"
        android:padding="8dp"
        android:autoSizeTextType="uniform"
        android:textSize="@dimen/scanbutton_textsize"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scanbutton_height"/>

    <!-- Footer -->

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_size"
        android:layout_alignParentBottom="true"
        android:background="#e3e3e3"
        android:gravity="left">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/floating_button_blue"
            android:src="@drawable/arrow_prev"
            app:fabCustomSize="@dimen/floating_button_size"
            app:maxImageSize="@dimen/floating_button_maximagesize"
            android:layout_marginLeft="@dimen/floating_button_margin_left"
            android:id="@+id/creating_documents_btn_cancel" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/creating_documents_btn_cancel"
            android:gravity="right">

             <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/basket"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:layout_marginRight="@dimen/floating_button_margin_right"
                android:id="@+id/creating_documents_btn_DETAL" />



            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/FASTMM"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:layout_marginRight="@dimen/floating_button_margin_right"
                android:id="@+id/creating_documents_btn_QuickMM" />


            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/floating_button_green"
                android:src="@drawable/checkmark"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:layout_marginRight="@dimen/floating_button_margin_right"
                android:id="@+id/creating_documents_btn_ok" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>