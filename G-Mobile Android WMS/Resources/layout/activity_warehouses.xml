
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header aligned to top -->
    <include
        layout="@layout/header" />

    <!-- Content below header and above footer -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/warehouses_list_header"
            android:orientation="vertical"
            android:background="@color/list_bands_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:text="@string/warehouses_name"
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:autoSizeTextType="uniform"
                android:layout_weight="70"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:autoSizeTextType="uniform"
                android:layout_weight="70"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <ListView
            android:layout_below="@id/warehouses_list_header"
            android:layout_above="@id/warehouses_list_footer"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/darker_gray"
            android:id="@+id/list_view_warehouses"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/warehouses_list_footer"
            android:layout_alignParentBottom="true"
            android:background="@color/list_bands_a"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/warehouses_liczba_pozycji"
                android:textColor="@color/color_white"
                android:layout_marginLeft="@dimen/list_margin_left"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="@string/global_liczba_pozycji"
                android:autoSizeTextType="uniform"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_size"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:background="@color/color_footer"
        android:gravity="left">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_prev"
            app:backgroundTint="@color/floating_button_blue"
            app:fabCustomSize="@dimen/floating_button_size"
            app:maxImageSize="@dimen/floating_button_maximagesize"
            android:layout_marginLeft="@dimen/floating_button_margin_left"
            android:id="@+id/warehouses_btn_prev" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/BtnInfo"
            android:gravity="right">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/refresh"
                app:backgroundTint="@color/floating_button_blue"
                app:fabCustomSize="@dimen/floating_button_size"
                app:maxImageSize="@dimen/floating_button_maximagesize"
                android:layout_marginRight="@dimen/floating_button_margin_right"
                android:id="@+id/warehouses_btn_refresh" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>